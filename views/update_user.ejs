
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Users</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update User</h2>
            <span class="text-light">Use the below form to Update an account</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="name" value="<%= user.id_topic %>" placeholder="Name here">
        </div>
        <div class="form-group">
            <label for="mac_address" class="text-light">mac_address</label>
            <input type="text" name="mac_address" value="<%= user.mac_address%>" placeholder="example@gmail.com">
        </div>

        
        <div class="form-group">
            <label for="fabrication_number" class="text-light">fabrication_number</label>
            <input type="text" name="fabrication_number" value="<%= user.fabrication_number%>" placeholder="example@gmail.com">
        </div>

        <div class="form-group">
            <label for="gender" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Active" <%= user.status == 'Active' ? 'checked' : '' %> >
                <label for="radio-4" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Inactive" <%= user.status == 'Inactive' ? 'checked' : '' %> >
                <label for="radio-5" class="radio-label">Inactive</label>
            </div>
        </div>



        <div class="form-group">
            <label for="cart_available" class="text-light">cart_available</label>
            <div class="radio inline">
                <input type="radio" id="radio-6" name="cart_available" value="Active" <%= user.cart_available == 'Active' ? 'checked' : '' %> >
                <label for="radio-6" class="radio-label">Active</label>
            </div>

            <div class="radio inline">
                <input type="radio" id="radio-7" name="cart_available" value="Inactive" <%= user.cart_available == 'Inactive' ? 'checked' : '' %> >
                <label for="radio-7" class="radio-label">Inactive</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
